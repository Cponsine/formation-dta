package fr.pizzeria.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

import java.sql.PreparedStatement;

import fr.pizzeria.Exception.DeletePizzaException;
import fr.pizzeria.Exception.SavePizzaException;
import fr.pizzeria.Exception.UpdatePizzaException;
import fr.pizzeria.model.CategoriePizza;
import fr.pizzeria.model.Pizza;

public class PizzaDaoJdbc implements PizzaDao {
	Statement st;
	Connection con;
	
	public void pizzaDaoConnect() throws SQLException {
		con = DriverManager.getConnection("jdbc:mysql://localhost:3306/pizzeria","root","");
		st = con.createStatement();
	}
	
	public void pizzaDaoDisconnect() throws SQLException{
		con.close();
	}
	@Override
	public List<Pizza> findAllPizzas() throws SQLException {
		List<Pizza> pizz= new ArrayList<Pizza>();
		ResultSet rs;
		try {
			pizzaDaoConnect();
			rs = st.executeQuery("select * from pizza");
			while(rs.next()){
				int id = rs.getInt("pizzaID");
				String codepizza = rs.getString("code");				
				String nom = rs.getString("libelle");
				double price = rs.getDouble("prix");
				String cat = rs.getString("categorie");
				
				//System.out.println(nom + " (" + price +"€)");
				pizz.add(new Pizza(id,codepizza,nom,price,CategoriePizza.valueOf(cat)));
		}} catch (SQLException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		pizzaDaoDisconnect();
		return pizz;
	}
	@Override
	public boolean saveNewPizza(Pizza pizza) throws SavePizzaException {
		try{
			pizzaDaoConnect();
			PreparedStatement newpizza=con.prepareStatement("insert into pizza (code,libelle,prix,categorie)"
					+ "values(?,?,?,?)");
			newpizza.setString(1, pizza.getCode());
			newpizza.setString(2,pizza.getNom());
			newpizza.setDouble(3, pizza.getPrix());
			newpizza.setString(4, pizza.getCat().toString());
			newpizza.executeUpdate();
			pizzaDaoDisconnect();
		}
		catch (SQLException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		// TODO Auto-generated method stub
		return false;
	}
	@Override
	public boolean updatePizza(String codePizza, Pizza pizza) throws UpdatePizzaException {
		ResultSet rs;
		try {
			rs = st.executeQuery("update pizza set libelle = nom prix = tarif where code= codePizza");
			while(rs.next()){
			String nom = rs.getString("libelle");
			double price = rs.getDouble("prix");
			System.out.println(nom + " (" + price +"€)");
		}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return false;
	}
	@Override
	public boolean deletePizza(String codePizza) throws DeletePizzaException {
		// TODO Auto-generated method stub
		return false;
	}
	@Override
	public Optional<Pizza> findPizzaByCode(String codePizza) {
		
		
		return null;
	}
	@Override
	public boolean isCodeExist(String codePizza) {
		// TODO Auto-generated method stub
		return false;
	}
}
